                </Grid.RowDefinitions>
            <Button x:Name="button3" Content="ADD TRAINEE" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="230" Height="120"/>
            <Button x:Name="button4" Content="DELLETE TRAINEE" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="230" Height="120"/>
            <Button x:Name="button5" Content="UPDATE TRAINEE" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="230" Height="120"/>
        </Grid>



